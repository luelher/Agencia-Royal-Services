<%= form_for @goal, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :month, :class => 'control-label' %>
    <div class="controls">
      <%= select_month(Date.today, field_name: 'month') %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :year, :class => 'control-label' %>
    <div class="controls">
      <%= select_year(Date.today, start_year: 2013, end_year: 2015, field_name: 'year') %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sales, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sales, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :billing, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :billing, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                goals_path, :class => 'btn' %>
  </div>
<% end %>
