  <dt><strong><%= model_class.human_attribute_name(:empleado_en) %>:</strong></dt>
  <dd><%= @ventas_cliente.empleado_en %></dd>
  <dt><strong><%= model_class.human_attribute_name(:direccion_trabajo) %>:</strong></dt>
  <dd><%= @ventas_cliente.direccion_trabajo %></dd>
