  <dt><strong><%= model_class.human_attribute_name(:tiempo) %>:</strong></dt>
  <dd><%= @ventas_cliente.tiempo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sueldo) %>:</strong></dt>
  <dd><%= @ventas_cliente.sueldo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cargo) %>:</strong></dt>
  <dd><%= @ventas_cliente.cargo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subordinados) %>:</strong></dt>
  <dd><%= @ventas_cliente.subordinados %></dd>
  <dt><strong><%= model_class.human_attribute_name(:otros_ingresos) %>:</strong></dt>
  <dd><%= @ventas_cliente.otros_ingresos %></dd>
