<%- model_class = Ventas::Seguimiento -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cliente_id) %>:</strong></dt>
  <dd><%= @ventas_seguimiento.cliente_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:motivo) %>:</strong></dt>
  <dd><%= @ventas_seguimiento.motivo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:observacion) %>:</strong></dt>
  <dd><%= @ventas_seguimiento.observacion %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ventas_seguimientos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ventas_seguimiento_path(@ventas_seguimiento), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ventas_seguimiento_path(@ventas_seguimiento),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
