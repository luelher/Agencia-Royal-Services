<%- model_class = Ventas::Presupuesto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cliente_id) %>:</strong></dt>
  <dd><%= @ventas_presupuestos.cliente_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:instalacion) %>:</strong></dt>
  <dd><%= @ventas_presupuestos.instalacion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:inicial) %>:</strong></dt>
  <dd><%= @ventas_presupuestos.inicial %></dd>
  <dt><strong><%= model_class.human_attribute_name(:giros) %>:</strong></dt>
  <dd><%= @ventas_presupuestos.giros %></dd>
  <dt><strong><%= model_class.human_attribute_name(:giros_especiales) %>:</strong></dt>
  <dd><%= @ventas_presupuestos.giros_especiales %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vendedor) %>:</strong></dt>
  <dd><%= @ventas_presupuestos.vendedor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aprobado_por) %>:</strong></dt>
  <dd><%= @ventas_presupuestos.aprobado_por %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ventas_presupuestos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ventas_presupuesto_path(@ventas_presupuestos), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ventas_presupuesto_path(@ventas_presupuestos),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
