<%= form_for @ventas_presupuesto, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :cliente_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cliente_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :producto, :class => 'control-label' %>
    <div class="controls detalle-producto">
      <%= f.text_field :producto, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cantidad, :class => 'control-label' %>
    <div class="controls form-inline">
      <%= f.text_field :cantidad, :class => 'input-small' %>
      <%= button_to_function "Agregar", "", :class => "btn", :id => "btn-agregar" %>
    </div>
  </div>
  <div class="control-group">
    <table class="table">
      <thead>
        <tr>
          <th>Codigo</th>
          <th>Producto</th>
          <th>Precio</th>
          <th>Cantidad</th>
          <th>Total</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody id="detalle_tabla">
      </tbody>
    </table>
  </div>  
  <div class="control-group">
    <%= f.label :inicial, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :inicial, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :giros, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :giros, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :giros_especiales, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :giros_especiales, :class => 'number_field' %>
    </div>
  </div>  
  <div class="control-group">
    <%= f.label :instalacion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :instalacion, :class => 'text_field' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ventas_presupuestos_path, :class => 'btn' %>
  </div>
<% end %>
