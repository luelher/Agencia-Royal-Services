<h2>Presupuesto</h2>
  <div class="control-group">
    <%= f.label :cliente_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cliente_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :producto, :class => 'control-label' %>
    <div class="controls detalle-producto">
      <%= text_field(:producto, :extra, :class => 'text_field') %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cantidad, :class => 'control-label' %>
    <div class="controls form-inline">
      <%= text_field(:cantidad, :extra, :class => 'input-small', :value => '1') %>
      <%= button_to_function "Agregar", "", :class => "btn", :id => "btn-agregar" %>
    </div>
  </div>
  <div class="control-group">
    <table class="table">
      <thead>
        <tr>
          <th>Codigo</th>
          <th>Producto</th>
          <th>Precio</th>
          <th>Cantidad</th>
          <th>IVA</th>
          <th>Total</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody id="detalle_tabla">
      </tbody>
    </table>
  </div>  
  <div class="control-group">
    <%= f.label :flete, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :flete, :class => 'text_field', :value => '0' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :total_venta, :class => 'control-label' %>
    <div class="controls">
      <%= text_field(:total_venta, :extra, :class => 'text_field') %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :porcentaje_inicial, :class => 'control-label' %>
    <div class="controls">
      <%= text_field :porcentaje_inicial, :extra, :class => 'text_field', :value => '0' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :inicial, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :inicial, :class => 'text_field', :value => @ventas_presupuesto.inicial.nil? ? '0' : @ventas_presupuesto.inicial %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :giro_a_la_vista, :class => 'control-label' %>
    <div class="controls">
      <%= select :giro_a_la_vista, :extra, [12, 18], {:class => 'text_field', :include_blank => true} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cuota, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cuota, :class => 'text_field', :value => @ventas_presupuesto.cuota.nil? ? '0' : @ventas_presupuesto.cuota %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :giros, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :giros, :class => 'number_field', :value => @ventas_presupuesto.giros.nil? ? '12' : @ventas_presupuesto.giros %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :giros_especiales, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :giros_especiales, :class => 'number_field', :value => @ventas_presupuesto.inicial.nil? ? '0' : @ventas_presupuesto.inicial %>
    </div>
  </div>  
  <div class="control-group">
    <%= f.label :direccion_entrega, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :instalacion, :class => 'input-xxlarge', :size => "60x3"  %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :vendedor_id, :class => 'control-label' %>
    <div class="controls">
      <%= select :ventas_presupuesto, :vendedor_id, options_from_collection_for_select(Profit::Vendedor.all, :id, :ven_des) , {:class => 'text_field', :include_blank => true} %>
    </div>
  </div>  


<%= render :partial => 'fiador', locals: {:f => f}  %>